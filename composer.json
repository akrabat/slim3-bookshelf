{
    "name": "akrabat/slim-bookshelf",
    "description": "Example Slim Framework 3 application.",
    "license": "BSD-3-Clause",
    "type": "project",
    "keywords": ["slim-framework"],
    "config" : {
        "platform": {
           "php": "7.4"
        },
        "allow-plugins": {
            "kylekatarnls/update-helper": false
        }
    },
    "authors": [
        {
            "name": "Rob Allen",
            "email": "rob@akrabat.com",
            "homepage": "http://akrabat.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Bookshelf\\": "app/src/Bookshelf"
        }
    },
    "require": {
        "illuminate/database": "^6.20.12",
        "php" : ">=7.1",
        "slim/csrf": "^0.3.3",
        "slim/flash": "^0.1.0",
        "slim/slim": "^3.0",
        "slim/twig-view": "^1.0",
        "vlucas/valitron": "^1.2"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.5",
        "phpunit/phpunit": "^5.2"
    },
    "scripts": {
        "test": [
            "php vendor/squizlabs/php_codesniffer/scripts/phpcs",
            "php vendor/phpunit/phpunit/phpunit"
        ]
    }
}
